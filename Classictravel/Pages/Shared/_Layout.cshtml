<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Classictravel</title>
    <link href="~/lib/fontawesome/css/all.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700;800&display=swap" rel="stylesheet">

</head>
<body>

    <header class="header">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <a class="navbar-brand fs-4 fw-bolder" href="#">
                        <img src="~/img/classictravel-logo.png" alt="" width="30" height="40" class="d-inline-block align-text-top">
                        classic<strong class="text-gold">travel</strong>.com
                    </a>
                    @*<ul class="navbar-nav">
                            <li class="nav-item">
                                <a href="url" title="Home" class="nav-link active px-4 fs-6 fw-bold text-capitalize  text-decoration-none" target="_blank">
                                    <i class="text-success fw-bold fas fa-phone me-2"></i> 96 Ernser Vista Suite 437, NY, US
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="url" title="Home" class="nav-link active px-4 fs-6 fw-bold text-capitalize  text-decoration-none" target="_blank">
                                    <i class="text-success fw-bold fas fa-envelope-open-text me-2"></i> (123) 456-78-910
                                </a>
                            </li>
                        </ul>*@
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a href="url" title="Home" class="nav-link active fs-3 fw-bold text-capitalize  text-decoration-none" target="_blank">
                                <i class="bi-instagram text-danger"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="url" title="Home" class="nav-link active px-4 fs-3 fw-bold text-capitalize  text-decoration-none" target="_blank">
                                <i class="bi-twitter text-info"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="url" title="Home" class="nav-link active px-4 fs-3 fw-bold text-capitalize  text-decoration-none" target="_blank">
                                <i class="bi-facebook text-body text-facebook"></i>

                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="url" title="LinkedIn" class="nav-link active px-4 fs-3 fw-bold text-capitalize  text-decoration-none" target="_blank">
                                <i class="bi-linkedin text-info"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="url" title="Home" class="nav-link active px-4 fs-3 fw-bold text-capitalize  text-decoration-none" target="_blank">
                                <i class="bi-youtube text-danger"></i>
                            </a>
                        </li>
                    </ul>
                    <div class="d-flex">
                        <button class="btn btn-success btn-action" type="submit">Sign In / Register</button>
                    </div>
                </div>
            </div>
        </nav>
        <nav class="navbar navbar-expand-lg navbar-light bg-white" style="background-color: #e3f2fd;">
            <div class="container">
                <div class="collapse navbar-collapse justify-content-between" id="navbarSupportedContent">

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <ul class="navbar-nav mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a href="url" title="Home" class="nav-link active px-4 fs-6 fw-bold text-capitalize  text-decoration-none" target="_blank">
                                Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="url" title="Home" class="nav-link active px-4 fs-6 fw-bold text-capitalize  text-decoration-none" target="_blank">
                                Hotels
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="url" title="Home" class="nav-link active px-4 fs-6 fw-bold text-capitalize  text-decoration-none" target="_blank">
                                Specialty Travel
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="url" title="Home" class="nav-link active px-4 fs-6 fw-bold text-capitalize  text-decoration-none" target="_blank">
                                Guides
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="url" title="Home" class="nav-link active px-4 fs-6 fw-bold text-capitalize  text-decoration-none" target="_blank">
                                Contact Us
                            </a>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <button type="button" alt="Destination, attraction, hotel, city etc" class="btn btn-outline-primary"><i class="bi bi-search px-2"></i>Search</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Classictravel - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
